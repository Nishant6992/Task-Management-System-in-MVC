@model Task_Management_System2.Areas.Admin.Models.ForgetPasswordAdmin
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title></title>
    <style type="text/css">
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }

        #background {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(to right, #3498db, #2c3e50);
            z-index: -1;
        }

        form {
            margin: 50px auto;
            max-width: 400px;
            background-color: #fff;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        label {
            font-size: 1.2em;
            color: #333;
        }

        input[type="text"],
        input[type="password"] {
            width: 100%;
            padding: 10px;
            margin: 8px 0;
            box-sizing: border-box;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 1em;
        }

        .show-password {
            display: flex;
            align-items: center;
            margin-top: 10px;
        }

            .show-password input {
                margin-right: 5px;
            }

        .error-message {
            color: red;
        }

        #Button1 {
            background-color: #3498db;
            color: #fff;
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 1.2em;
        }

            #Button1:hover {
                background-color: #2980b9;
            }
    </style>
</head>
<body>
    @using (Html.BeginForm("AdminChangePassword", "Admin", FormMethod.Post))
    {
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div>
            <div class="auto-style1">
                <div>
                    <div colspan="6" style="text-align: center; vertical-align: top">
                        @Html.LabelFor(model => model.NewPassword, "Change Your Password", new { @class = "control-label", @style = "font-weight: bold; font-size: xx-large; text-decoration: underline" })
                    </div>
                </div>
                <div>
                    <div style="text-align: center">
                        @Html.HiddenFor(model => model.Email)
                        @Html.LabelFor(model => model.NewPassword, "New Password:", new { @class = "control-label", @style = "font-size: x-large" })
                        @Html.PasswordFor(model => model.NewPassword, new { @class = "form-control", @style = "font-size: x-large", @type = "password" })
                    </div>
                </div>

                <div style="text-align: center">
                    <button id="Button1" type="submit" class="btn btn-primary" style="font-size: x-large">Confirm</button>
                </div>
            </div>
        </div>
    }
</body>
</html>
